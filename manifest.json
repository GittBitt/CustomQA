{
    "name": "CustomQA",
    "version": "1.0",
    "manifest_version": 3,
    "description": "A sample browser extension manifest file.",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }, 
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["contentScript.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/bookmark.png", 
                "assets/play.png", 
                "assets/delete.png",
                "assets/save.png"
            ],
            "matches": ["https://*.youtube.com/*"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "CustomQA Extension",
        "default_icon": {
            "16": "assets/icon16.png",
            "24": "assets/icon48.png",
            "32": "assets/icon128.png"
        }
    }
}