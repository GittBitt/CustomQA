{
    "name": "CustomQA",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "A sample browser extension manifest file.",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "tts"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }, 
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["contentScript.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.css",
                "popup.js",
                "sidebar.html",
                "sidebar.css",
                "assets/activation.mp3"
            ],
            "matches": ["https://*.youtube.com/*"]
        }
    ],
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "CustomQA Extension"
    }
}